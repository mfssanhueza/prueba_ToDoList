<div class="well">
  <% @todos.each do |e| %>
    <div class="well">
      <%= e.description %>
      <%= e.completed ? 'Completado' : 'No completado' %>
      <%= link_to 'Mostrar', todo_path(e), class:'btn btn-primary'  %>
      <%= link_to 'Editar', edit_todo_path(e), class:'btn btn-primary'  %>
      <%= link_to 'Eliminar', todo_path(e), class:'btn btn-primary', :method => 'delete'  %>
      <%= link_to 'Hecho', complete_path(e), class:'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Crear ToDo", new_todo_path, class:'btn btn-primary' %>
</div>
